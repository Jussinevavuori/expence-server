{
  "name": "nexpenda-server",
  "version": "1.0.0",
  "description": "nexpenda server",
  "repository": {
    "url": "https://github.com/Jussinevavuori/nexpenda-server.git",
    "type": "git"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build:initial": "tsc",
    "build": "rimraf dist && tsc",
    "prisma:generate": "prisma generate",
    "start": "node ./dist/index.js",
    "build:start": "npm run build && npm run start",
    "dev": "cross-env NODE_ENV=development nodemon -e ts -w ./src -x ts-node --files ./src/index.ts",
    "test": "cross-env NODE_ENV=test ts-node --files ./src/tests/runTests.ts",
    "migrate": "cd ./prisma && migrate.bat",
    "migrate:dev": "cd ./prisma && migrate-dev.bat",
    "migrate:prod": "cd ./prisma && migrate-prod.bat",
    "studio:dev": "cd ../nexpenda-prismastudio/dev && node update-schema && npx prisma studio --experimental",
    "studio:prod": "cd ../nexpenda-prismastudio/prod && node update-schema && npx prisma studio --experimental",
    "studio:test": "cd ../nexpenda-prismastudio/test && node update-schema && npx prisma studio --experimental",
    "psql:dev": "psql expencedev postgres",
    "deploy": "gcloud builds submit"
  },
  "engines": {
    "node": "12.x",
    "npm": "6.x"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@prisma/cli": "^2.18.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.7",
    "@types/date-fns": "^2.6.0",
    "@types/ejs": "^3.0.4",
    "@types/express": "^4.17.7",
    "@types/express-rate-limit": "^5.1.0",
    "@types/faker": "^4.1.12",
    "@types/jest": "^26.0.9",
    "@types/jest-cli": "^24.3.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.0.27",
    "@types/node-fetch": "^2.5.7",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^1.0.4",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/socket.io": "^2.1.10",
    "@types/uuid": "^8.0.0",
    "chalk": "^4.1.0",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2"
  },
  "dependencies": {
    "@google-cloud/firestore": "^4.9.2",
    "@prisma/client": "^2.18.0",
    "@types/mailgun-js": "^0.22.11",
    "@types/stripe": "^8.0.417",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.3",
    "faker": "^4.1.0",
    "jest": "^26.4.2",
    "jest-cli": "^26.3.0",
